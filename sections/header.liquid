<div class="collection-header">
 
  <h1 class="storeLogo">VivaStitch</h1>


  <nav class="collection-nav">
    <a href="/collections/all" class="{% if collection.handle == 'all' %}active{% endif %}">All</a>
    <a href="/collections/socks" class="{% if collection.handle == 'socks' %}active{% endif %}">Socks</a>
    <a href="/collections/womens-t-shirts" class="{% if collection.handle == 'womens-t-shirts' %}active{% endif %}">Women's T-shirts</a>
    <a href="/collections/mens-t-shirts" class="{% if collection.handle == 'mens-t-shirts' %}active{% endif %}">Men's T-shirts</a>
    <a href="/collections/hoodies" class="{% if collection.handle == 'hoodies' %}active{% endif %}">Hoodies</a>
  </nav>

 
  <div class="header-right">
    <a href="/account">Account</a>
    <a href="/cart">Bag({{ cart.item_count }})</a>
  </div>
</div>



{% stylesheet %}
.collection-header {
  position: fixed;            
  top: 0;
  left: 0;
  width: 100%;
  background-color: whitesmoke;
  padding: 15px 30px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: 'Poppins', sans-serif;
}


.storeLogo {
  font-family: 'Brush Script MT', cursive;
  font-size: 30px;
  color: #000; 
  margin-right: 20px;
}


.collection-nav {
  display: flex;
  gap: 12px;
  flex-wrap: wrap; 
}

.collection-nav a {
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
  color: #333;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
}

.collection-nav a:hover,
.collection-nav a.active {
  background-color: #878686ff;
  color: #1b1919ff; 
  transform: translateY(-2px);
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}


.header-right {
  display: flex;
  gap: 12px;
}

.header-right a {
  padding: 8px 12px;
  border-radius: 6px;
  text-decoration: none;
  color: #333;
  font-weight: 500;
  transition: all 0.3s ease;
}

.header-right a:hover {
  color: #252323ff;
  transform: translateY(-2px);
}

body {
  padding-top: 80px; 
}

{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
