<div class="collection-header">

   <button class="hamburger" onclick="toggleDrawer()">☰</button>

  <nav class="collection-nav">
    <a href="{{ routes.all_products_collection_url }}" class="{% if collection.handle == 'all' %}active{% endif %}">All</a>
    <a href="{{ routes.collections_url }}/Socks" class="{% if collection.handle == 'Socks' %}active{% endif %}">Socks</a>
    <a href="{{ routes.collections_url }}/Shirts" class="{% if collection.handle == 'Shirts' %}active{% endif %}">Shirts</a>
    <a href="{{ routes.collections_url }}/hoodies-1" class="{% if collection.handle == 'Hoodies' %}active{% endif %}">Hoodies</a>
  </nav>

  <h1 class="storeLogo"><a href="{{ routes.root_url }}">VivaStitch</a></h1>
 
  <div class="header-right">
    <a href="{{ routes.account_url }}">Account</a>
    <a href="{{ routes.cart_url }}">Bag({{ cart.item_count }})</a>
  </div>

  <div id="drawer" class="drawer">
  <div class="drawer-content">
    <button class="close-drawer" onclick="toggleDrawer()">✕</button>

    <ul class="drawer-links">
      <li><a href="{{ routes.all_products_collection_url }}">Shop All</a></li>
      <li><a href="{{ routes.collections_url }}/Socks">Socks</a></li>
      <li><a href="{{ routes.collections_url }}/Shirts">Shirts</a></li>
      <li><a href="{{ routes.collections_url }}/Hoodies">Hoodies</a></li>
      <li><a href="{{ routes.collections_url }}/gift-cards">Gift Cards</a></li>
    </ul>

    <div class="drawer-bottom">
      <a href="{{ routes.account_url }}">Account</a>
      <a href="/pages/contact">Contact</a>
    </div>

  </div>
</div>
</div>



{% stylesheet %}
.collection-header {
  position: fixed;            
  top: 0;
  left: 0;
  width: 100%;
  background-color: whitesmoke;
  padding: 15px 30px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: 'Poppins', sans-serif;
}


.storeLogo {
  font-family: 'Brush Script MT', cursive;
  font-size: 30px;
  color: #000; 
  margin-right: 35%;
}

.storeLogo a { text-decoration: none; color: inherit; }


.collection-nav {
  display: flex;
  gap: 3px;
  flex-wrap: wrap; 
}

.collection-nav a {
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
  color: #333;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
}

.collection-nav a:hover,
.collection-nav a.active {
  background-color: #878686ff;
  color: #151515ff; 
  transform: translateY(-2px);
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}


.header-right {
  display: flex;
  gap: 12px;
}

.header-right a {
  padding: 8px 12px;
  border-radius: 6px;
  text-decoration: none;
  color: #333;
  font-weight: 500;
  transition: all 0.3s ease;
}

.header-right a:hover {
  color: #151515ff;
  transform: translateY(-2px);
}

body {
  padding-top: 80px; 
}


.close-drawer {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  align-self: flex-end;
  margin-bottom: 20px;
}

.drawer {
  position: fixed;
  top: 0;
  left: -100%;
  width: 30%;
  height: 50%;
  background-color: #fff;
  box-shadow: 2px 0 8px rgba(0,0,0,0.2);
  transition: left 0.3s ease;
  z-index: 1100;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.drawer.open {
  left: 0;
}


{% endstylesheet %}

