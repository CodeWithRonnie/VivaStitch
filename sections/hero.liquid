{% comment %}
  Homepage Hero section
{% endcomment %}

<section class="hero full-width">
  <div class="hero__inner" style="--hero-overlay: {{ section.settings.overlay_opacity | default: 0.5 }}; background-image: url('{% if section.settings.bg_image %}{{ section.settings.bg_image | image_url: width: 2400 }}{% elsif section.settings.image %}{{ section.settings.image | image_url: width: 2400 }}{% else %}{{ 'Viva-runway.png' | asset_url }}{% endif %}'); background-size: cover; background-position: center;">
    <div class="hero__overlay"></div>
    <div class="hero__center">
      <a class="btn btn--secondary" href="{{ routes.collections_url }}#collections">View collection</a>
    </div>
  </div>
  <div class="hero__below">
    <h1 class="hero__title">{{ section.settings.heading | default: 'Style that speaks. Comfort that lasts.' }}</h1>
    {% if section.settings.subheading != blank %}
      <p class="hero__subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>
  <div class="hero__decor"></div>
  <div class="hero__decor hero__decor--two"></div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: grid;
    grid-template-columns: var(--content-grid);
    background: radial-gradient(1200px 600px at 10% 0%, rgba(37,99,235,.10), transparent),
                radial-gradient(900px 500px at 90% 10%, rgba(249,115,22,.10), transparent),
                linear-gradient(180deg, #ffffff, #f9fafb);
    padding: 0;
    overflow: hidden;
  }

  .hero__inner {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 0;
    padding: 0;
    background: var(--hero-bg) center center / cover no-repeat;
    border-radius: 0;
    min-height: 100vh;
    position: relative;
  }

  .hero__overlay { position: absolute; inset: 0; background: rgba(0,0,0,var(--hero-overlay, .5)); }
  .hero__center { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; z-index: 1; }
  .hero__center .btn { font-size: 1.05rem; padding: 16px 24px; }

  .hero__title {
    font-size: clamp(2rem, 4vw, 3.5rem);
    line-height: 1.1;
    margin: 0;
    font-weight: 800;
    color: #0f172a;
  }

  .hero__subtitle {
    margin-top: 16px;
    font-size: 1.1rem;
    color: #374151;
    max-width: 60ch;
  }

  .hero__below { grid-column: 1 / -1; padding: 16px 24px 0; display: grid; grid-template-columns: var(--content-grid); }
  .hero__below > * { grid-column: 2; }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 20px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 800;
    box-shadow: var(--shadow-md);
    transition: transform .15s ease, box-shadow .2s ease, filter .2s ease;
  }

  .btn--primary { background: linear-gradient(90deg, var(--brand-600), var(--brand-700)); color: #fff; }
  .btn--primary:hover { transform: translateY(-1px); filter: brightness(1.03); }

  .btn--secondary { background: linear-gradient(90deg, var(--accent-500), var(--accent-600)); color: #fff; }
  .btn--secondary:hover { transform: translateY(-1px); filter: brightness(1.03); }

  /* Removed in-image content; now using background + overlay */

  .hero__decor {
    position: absolute;
    inset: auto -10% -20% auto;
    width: 50%;
    height: 60%;
    background: radial-gradient(40% 40% at 50% 50%, rgba(37,99,235,.15), transparent 70%);
    pointer-events: none;
  }

  .hero__decor--two {
    inset: -20% auto auto -10%;
    background: radial-gradient(40% 40% at 50% 50%, rgba(249,115,22,.15), transparent 70%);
  }

  @media (max-width: 1100px) { .hero__inner { grid-template-columns: 1fr; } }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Style that speaks. Comfort that lasts." },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover essentials crafted for everyday comfort and timeless style." },
    { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "Shop now" },
    { "type": "url", "id": "primary_link", "label": "Primary button link" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "Explore collections" },
    { "type": "url", "id": "secondary_link", "label": "Secondary button link" },
    { "type": "image_picker", "id": "image", "label": "Hero image" },
    { "type": "image_picker", "id": "bg_image", "label": "Background image (full-bleed)" },
    { "type": "range", "id": "overlay_opacity", "min": 0, "max": 0.9, "step": 0.1, "default": 0.5, "label": "Overlay opacity" }
  ],
  "presets": [
    { "name": "Hero", "category": "Hero" }
  ]
}
{% endschema %}


